@{ 
    ViewData["Title"] = "HTML Test View";
}

@section Scripts
{
    <script src="https://cdn.tiny.cloud/1/jklynuq7h4itxebsvhd36gofsj9jh4v7xljl4wvlozhyyzsm/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: '#test-html',
            plugins: 'a11ychecker advcode formatpainter linkchecker autolink lists checklist media mediaembed pageembed permanentpen powerpaste table advtable tinycomments tinymcespellchecker',
            toolbar: 'a11ycheck addcomment showcomments checklist code formatpainter pageembed permanentpen table',
            toolbar_mode: 'floating',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
        });
    </script>
}

<h1>HTML Editor Sample</h1>
<textarea id="test-html"></textarea>